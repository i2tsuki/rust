#!/bin/sh
set -e

# Change Working Directory
cd "$(dirname $(readlink -f $0))"

[ -z "${UID}" ] && UID="$(id -u)"
[ -z "${GID}" ] && GID="$(id -g)"

# Create Dockerfile
cat <<EOF > Dockerfile 
FROM debian:jessie

RUN apt-get -yq update && \\
    apt-get install -yq iperf3
EOF

# Build container
docker build -t veth-netmap . && rm -fv ./Dockerfile
